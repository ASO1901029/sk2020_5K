<%# ブレインストーミング　手順１　アイデア出し %>
<div class="home_body wide_margin">
  <h3 class="theme">テーマ: <%= idea.idea_name %></h3>
  <div class="post_idea">
    <form name="brainstorming_process1_form" onsubmit="return false;">
      <div class="ui fluid action input">
        <% if Rails.env.test? %>
          <%= text_field_tag 'idea_add', '', id: 'feature-test-brainstorming', placeholder: "思いついたことを書いていきましょう", data: {behavior: 'idea_speaker'} %>
        <% else %>
          <%= text_field_tag 'idea_add', '', placeholder: "思いついたことを書いていきましょう", data: {behavior: 'idea_speaker'} %>
        <% end %>
      </div>
    </form>
  </div>
  <div class="ui four cards process1_ideas" id="ideas">
    <% for content in idea_logs.reverse do %>
      <% if content.query['mode'] == 'add' %>
        <div class="teal card idea" id="">
          <div class="content">
            <%= content.query["add"]["content"].slice(0..29) + '.....' %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>