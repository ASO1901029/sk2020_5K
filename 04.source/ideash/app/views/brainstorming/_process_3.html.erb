<%# ブレインストーミング　手順３　グルーピング %>
<div class="home_body wide_margin">
  <h3 class="theme">テーマ: <%= idea.idea_name %></h3>
  <%# 3 %>
  <div class="ui black large button group-add" id="group_add">グループを追加する</div>
  <div class="process3_contents">
    <div class="group-contents">
      <% for content in idea_logs do %>
        <% if content.query['mode'] == 'group' %>
          <div class="group" ondrop="drop_handler(event)" ondragover="dragover_handler(event)">
            <div class="ui stacked segments group" id="group_id_<%=content.query["group"]["group_id"]%>">
              <div class="ui huge transparent input">
                <%= text_field_tag 'brain_rename_' + content.query["group"]["group_id"].to_s, '', placeholder: content.query["group"]["name"], data: {behavior: 'idea_speaker'} %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="idea-contents">
      <div class="ideas" id="p3_ideas">
        <% for content in idea_logs.reverse do %>
          <% if content.query['mode'] == 'add' %>
            <div class="idea" id="object_id_<%= content.query["add"]["object_id"] %>" draggable="true" ondragstart="dragstart_handler(event)">
              <div class="ui teal large label">
                <%= content.query["add"]["content"] %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>