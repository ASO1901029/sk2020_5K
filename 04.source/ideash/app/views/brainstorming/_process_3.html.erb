<%# ブレインストーミング　手順３　グルーピング %>
<div class="edit_body" id="edit_body">
  <h3 class="theme">入力されたテーマ</h3>
  <%# 3 %>
  <div class="process3_contents">
    <div class="group-contents">
      <% writers = ['GROUP１', 'GROUP２', 'GROUP３', 'GROUP４', 'GROUP５'] %>
      <% writers.each do |writer| %>
        <div class="ui stacked segments group">
          <div class="ui huge transparent input">
            <input type="text" placeholder=<%= writer %>>
          </div>
        </div>
      <% end %>
      <div class="ui black large button group-add">グループを追加する</div>
    </div>
    <div class="idea-contents">
      <% writers = ['アイデア１', 'アイデア２', 'アイデア３', 'アイデア４', 'アイデア５'] %>
      <% writers.each do |writer| %>
        <div class="idea">
          <div class="ui teal large label">
            <%= writer %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>