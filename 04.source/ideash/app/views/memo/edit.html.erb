<%= render :partial => 'shared/header' %>

<div class="home_body" id="home_body">
  <%# 右部のメモ一覧 %>
  <div class="ui right fixed vertical menu block-edit-sidebar memo_sidebar">
    <%= render partial: 'shared/memomenu', collection: @user_memo.reverse, as: "memo" %>
  </div>

  <div class="ui container">
    <div class="ui text">メモを確認しましょう。</div>
    <%= form_with model: @memo, class: 'ui form memo_form', local: true, url: "/idea/memo?id=#{@memo.id}" do |f| %>

      <div class="fields">
        <div class="sixteen wide field">
          <label for="memo-title">タイトル</label>
          <%= f.text_field :idea_name, placeholder: "メモに名前をつけてください", class: 'field',:required => true, id: 'memo-title' %>
        </div>
      </div>
      <div class="fields">
        <%= f.hidden_field :idea_category_id, :value => 1 %>
        <div class="sixteen wide field">
          <label for="memo-contents">内容</label>
          <%= f.text_area :idea_description, placeholder: "メモを書きましょう", :required => true, id: 'memo-contents'%>
        </div>
      </div>
      <%= f.submit '更新', class: "ui black button", id: 'memo-submit'%>
    <% end %>
  </div>
</div>

