<% content_for(:html_title) { 'SignIn | Ideash' } %>

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <%= image_tag 'icon_mini.png', class: 'image no_select' %>
      <div class="content">
        Sign-In to your account
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: :account_signin, html: {class: "ui large form"}) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autoforcus: true, autocomplite: "email", placeholder: "E-mail address", id: "email-id"%>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autoforcus: true, placeholder: "Password", id: "password-id"%>
          </div>
        </div>
        <%= f.submit "Sign In", class: 'ui fluid large teal submit button' %>
      </div>
      <div class="ui error message"></div>
    <% end %>

    <div class="ui message">
      New to us? <%= link_to 'Sign Up', :account_signup %></a>
    </div>
  </div>
</div>